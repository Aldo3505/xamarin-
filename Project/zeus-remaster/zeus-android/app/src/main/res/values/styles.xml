<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/dim_white</item>
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>


    <style name="CustomActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="StandardFont">
        <item name="android:textColor">#a0ffffff</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="RangeFont" parent="@style/StandardFont">
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="InfoFont" parent="@style/StandardFont">
        <item name="android:textSize">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MenuButtonFont" parent="@style/StandardFont">
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="StandardFont.ItemHeader">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
